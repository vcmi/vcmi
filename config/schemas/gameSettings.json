	"properties" : {
		"textData" : {
			"type" : "object",
			"additionalProperties" : false,
			"properties" : {
				"heroClass"   : { "type" : "number" },
				"artifact"    : { "type" : "number" },
				"creature"    : { "type" : "number" },
				"faction"     : { "type" : "number" },
				"hero"        : { "type" : "number" },
				"spell"       : { "type" : "number" },
				"object"      : { "type" : "number" },
				"terrain"     : { "type" : "number" },
				"river"       : { "type" : "number" },
				"road"        : { "type" : "number" }
			}
		},
		"mapFormat" : {
			"type" : "object",
